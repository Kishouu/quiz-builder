generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Quiz {
    id 		Int 	@id @default(autoincrement())
    title 	String 	
    questions 	Question[]
}

model Question {
  id       Int          @id @default(autoincrement())
  type     QuestionType
  text     String
  answer   String?
  options  String?
  quizId   Int
  quiz     Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
}


enum QuestionType {
    BOOLEAN
    INPUT
    CHECKBOX
}
